generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  roll      Roll    @default(USER)
  email     String  @unique
  password  String
}

model Product {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  status    Status  @default(Activo)
  category  String
  price     Float
  date      String
}

enum Status {
  Activo
  Inactivo
}

enum Roll {
  USER
  ADMIN
}
